# SMTP服务器监听地址
LISTEN_ADDR=:1025

# 数据库路径
DB_PATH=./smtp_queue.db

# 消息队列处理间隔(秒)
QUEUE_INTERVAL=30

# 邮件清理配置
# 最大保留时间(小时)
MAX_EMAIL_AGE=72
# 最大失败次数
MAX_FAIL_COUNT=5

# 实际SMTP服务器配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=your_password
SMTP_FROM=noreply@example.com

# 加密方式: none, ssl, tls
SMTP_ENCRYPTION=tls 